<h1>User Books</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_books.each do |user_book| %>
      <tr>
        <td><%= link_to user_book.user.username, user_path(user_book.user) %></td>
        <td><%= link_to user_book.book.title, book_path(user_book.book) %></td>
        <td><%= link_to 'Show', user_book %></td>
        <td><%= link_to 'Edit', edit_user_book_path(user_book) %></td>
        <td><%= link_to 'Destroy', user_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New UserBook', new_user_book_path %> |
<%= link_to 'Users Index', users_path %> |
<%= link_to 'Books Index', books_path %>
