<h1>All Books</h1>

<%= link_to "Add a New Book", new_book_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td>
        <%= link_to "Show", book_path(book) %> |
        <%= link_to "Edit", edit_book_path(book) %> |
        <%= link_to "Delete", confirm_destroy_book_path(book) %>
      </td>
    </tr>
  <% end %>
</table>

<% if notice %>
  <p style="color: green;"><%= notice %></p>
<% end %>
